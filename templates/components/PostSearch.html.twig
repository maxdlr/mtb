<div {{ attributes }}>
  <input
    type="search"
    data-model="query"
  >

  {% if computed.posts|length > 0 %}
    <div data-loading="addClass(opacity-50)" class="mt-3 row">
      {% for post in computed.posts %}
        <img
          src="{{ asset('images/posts/' ~ post.fileName) }}"
          class="post-img img-fluid p-2 m-0"
          id="post-img-{{ post.id }}"
        >
      {% endfor %}
    </div>
  {% else %}
    <div class="pt-3">Ah! No packages found matching "{{ query }}"</div>
  {% endif %}
</div>