<div{{ attributes }} class="row mb-2 p-0 m-0">
    <img
            class="post-img img-fluid p-0 m-0 col rounded-3"
            src="{{ asset('images/posts/' ~ post.filename) }}"
            id="post-img-{{ post.id }}"
            alt="Gif animÃ©"
    />
    <div class="col-10 my-auto mx-0 px-0">
        {{ form_start(form, {
            attr: {
                'data-action': 'change->live#action',
                'data-action-name': 'prevent|save'
            }
        }) }}
        {{ form_row(form.post, {
            'row_attr': {
                'class': 'py-0 px-2 m-0'
            }
        }) }}
        {{ form_row(form.prompt, {
            'row_attr': {
                'class': 'py-0 px-2 m-0'
            }
        }) }}
        {{ form_end(form) }}
    </div>
</div>
