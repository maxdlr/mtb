<!-- Modal -->
<div class="modal fade" id="{% block modalID %}{% endblock %}" tabindex="-1" aria-labelledby="{{ block('modalID') }}Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="{{ block('modalID') }}Label">
          {% block modalTitle %}{% endblock %}
        </h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        {% block modalBody %}{% endblock %}
      </div>
      <div class="modal-footer">
        {% block footer %}{% endblock %}
      </div>
    </div>
  </div>
</div>