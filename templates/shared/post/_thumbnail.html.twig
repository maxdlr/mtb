<div class="position-relative p-2">

    <div class="title-font position-absolute start-0 bottom-0 py-3 px-4 d-flex justify-content-between align-items-center w-100">
        {% if rich %}
            <div>
                <a class="btn btn-sm btn-primary rounded-pill"
                   href="{{ path('app_user_page', {'username': post['owner']}) }}">
                    {{ post['owner']|title }}
                </a>
                <i class="bi bi-arrow-right-short text-light"></i>
                <button class="btn btn-sm btn-outline-light rounded-pill"
                        {{ stimulus_action('postsearch', 'filter', 'click') }}
                        data-postsearch-promptname-param="{{ post['promptNameFr'] }}"
                >
                    {{ post['promptNameFr']|title }}
                </button>
            </div>
        {% else %}
            <button class="btn btn-sm btn-outline-light rounded-pill"
                    {{ stimulus_action('postsearch', 'filter', 'click') }}
                    data-postsearch-promptname-param="{{ post['promptNameFr'] }}"
            >
                {{ post['promptNameFr']|title }}
            </button>
            {#            TODO: posts might have more than one author #}
        {% endif %}

        {% if app.user and owner is defined and app.user is same as owner %}
            {{ include('shared/buttons/_deleteButton.html.twig',{
                route: path('app_post_delete', {'id': post['id']}),
                token: csrf_token('delete' ~ post['id']),
                btnClass: 'btn-sm rounded-pill'
            }) }}
        {% endif %}

    </div>
    <img
            src="{{ asset('images/posts/' ~ post['fileName']) }}"
            class="post-img img-fluid m-0 p-0 rounded-4"
            id="post-img-{{ post['id'] }}"
            alt="Gif animÃ© - {{ post['promptNameFr']|title }} de {{ post['owner']|title }}"
    >
</div>