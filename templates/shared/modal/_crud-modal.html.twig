{% extends 'modal-base.html.twig' %}

{% block modalID %}{{ modalID }}{% endblock %}
{% block buttonLabel %}{{ buttonLabel }}{% endblock %}

{% block modalTitle %}{{ title }}{% endblock %}

{% block modalBody %}

  {{ form_start(form) }}

  {% for child in form %}
    {% if 'submit' != child.vars.name %}
      {{ form_row(child) }}
    {% endif %}
  {% endfor %}

{% endblock %}

{% block submitButton %}{{ form_row(form.submit) }}{% endblock %}