{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <main class="container">
        <header class="row">
            <img
                    src="{{ asset('build/images/ombrages.png') }}"
                    alt="Logo du Motiontober"
                    class="img-fluid col-6 mx-auto mt-3"
            >
        </header>
        <section>
            <h2 class="text-center title-font fs-1 text-red">
            {{ currentList.year }}
            </h2>
            <table class="m-auto">
                <thead>
                    <tr class="title-font">
                        <th class="pe-5">#</th>
                        <th>Fran√ßais</th>
                        <th class="ps-5">English</th>
                    </tr>
                </thead>
                <div class="line-divider"></div>
                <tbody>

                {% for prompt in currentList.prompts %}

                    {% set red = loop.index0 % 3 == 0 ? 'text-primary' %}
                    {% set blue = loop.index % 3 == 0 ? 'text-secondary' %}
                    {% set blue = loop.index % 3 == 0 ? 'text-secondary' %}

                    <tr class="{% if loop.index0 % 3 == 0 %}text-red{% elseif loop.index % 3 == 0 %}text-blue{% else %}text-yellow{% endif %}
                            para-font">
                        <td class="pe-5">{{ prompt.dayNumber }}</td>
                        <td>{{ prompt.nameFr | title}}</td>
                        <td class="ps-5">{{ prompt.nameEn | title}}</td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </section>
    </main>
{% endblock %}
